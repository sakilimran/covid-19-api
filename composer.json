{
    "name": "sakilimran/covit19api",
    "description": "A PHP based REST API for Covit-19 Coronavirus Live Cases Data",
    "keywords": ["Covit-19", "Coronavirus", "Covit19", "Slim", "microframework", "rest", "router", "psr7", "monolog", "eloquent", "phpunit", "pimple", "api", "php"],
    "homepage": "http://github.com/sakilimran/covit19api",
    "license": "MIT",
    "authors": [
        {
            "name": "S. M. Sakil Imran",
            "email": "sakilcse7@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "fabpot/goutte": "^4.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "illuminate/database": "~5.1",
        "awurth/slim-validation": "^3.0",
        "illuminate/events": "^5.6",
        "robmorgan/phinx": "^0.9.2",
        "tuupola/slim-jwt-auth": "^3.0",
        "firebase/php-jwt": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
